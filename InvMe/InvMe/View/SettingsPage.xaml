<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InvMe.View.SettingsPage"
             Title="Settings">
    <ContentPage.Content>
        <StackLayout Orientation="Horizontal" VerticalOptions="Start">
            <Label Text="Get automatic your location" VerticalOptions="Center" Style="{StaticResource NormalLabelStyle}"/>
            <Switch x:Name="OnAutomaticUserLocation" VerticalOptions="Center" Toggled="OnAutomaticUserLocation_Toggled" HorizontalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>