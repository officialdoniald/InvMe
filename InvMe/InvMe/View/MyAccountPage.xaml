<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InvMe.View.MyAccountPage"
             Title="Settings">
    <ContentPage.Content>
        <StackLayout>
            <!--<Button x:Name="impressButton" Clicked="ImpressButton_Clicked" Text="Impress"></Button>-->
            <Button x:Name="blockButton" Clicked="BlockButton_Clicked" Text="Blocked people" Style="{StaticResource NormalButtonStyle}"></Button>
            <Button x:Name="settingsButton" Clicked="SettingsButton_Clicked" Text="Settings" Style="{StaticResource NormalButtonStyle}"></Button>
            <Button x:Name="deleteButton" Clicked="DeleteButton_Clicked" Text="Delete account" Style="{StaticResource NormalButtonStyle}"></Button>
            <Button x:Name="logoutButton" Clicked="LogoutButton_Clicked" Text="Logout" Style="{StaticResource NormalButtonStyle}"></Button>
            <ActivityIndicator x:Name="deleteActivity" IsRunning="False"></ActivityIndicator>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>